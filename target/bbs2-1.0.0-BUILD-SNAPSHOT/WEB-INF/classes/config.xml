    <typeAlias type="kr.ezen.bbs.domain.AdminDTO" alias="adminDTO"/>
    <typeAlias type="kr.ezen.bbs.domain.CategoryDTO" alias="categoryDTO"/>
    <typeAlias type="kr.ezen.bbs.domain.ProductDTO" alias="productDTO"/>
